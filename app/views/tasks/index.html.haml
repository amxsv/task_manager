%h1= t('app_name')

%table
  %thead
    %tr
      %th= t('todo')
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.title
        %td= link_to t('show'), task
        %td= link_to t('edit'), edit_task_path(task)
        %td= link_to t('destroy'), task, :method => :delete, :data => { :confirm => t('are_you_sure') }

%br

= link_to t('new_task'), new_task_path
