%h1= I18n.t('titles.app_name')

%table
  %thead
    %tr
      %th= I18n.t('titles.todo')
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.title
        %td= link_to I18n.t('buttons.show'), task
        %td= link_to I18n.t('buttons.edit'), edit_task_path(task)
        %td= link_to I18n.t('buttons.destroy'), task, :method => :delete, :data => { :confirm => I18n.t('messages.are_you_sure') }

%br

= link_to I18n.t('buttons.new_task'), new_task_path
